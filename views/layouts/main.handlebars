<html lang="en">


  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tutor Tea</title>
    <link rel="shortcut icon" type="image/png" href="/assets/teaEmoji.png" />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <header>


      <!-- NAVBAR -->
      <nav class="navbar navbar-expand-md navbar-dark" id="nav">
        <div class="container-fluid">
          <a
            id="nav-header"
            href="/"
            class="navbar-brand d-flex align-items-center justify-content-start"
          >
            <img
              src="/assets/teaEmoji.png"
              href="/"
              alt="Tea Icon"
              width="44"
              height="44"
            />
            <img
              src="/assets/tutorteaLogoWhite.png"
              href="/"
              alt="Tutor Tea Logo"
              width="130"
              height="64"
            />
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

              {{! LOGIN BUTTON }}
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  id="navbarDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Login
                </a>
                <ul
                  class="dropdown-menu dropdown-menu-dark"
                  aria-labelledby="navbarDropdown"
                >
                  <form class="px-2 py-3 opacity-100 login-form">
                    <div class="mb-3">
                      <label
                        for="exampleDropdownFormEmail1"
                        class="form-label"
                      >Username</label>
                      <input
                        type="username"
                        class="form-control username-login"
                        placeholder="Username"
                      />
                    </div>
                    <div class="mb-3">
                      <label
                        for="exampleDropdownFormPassword1"
                        class="form-label"
                      >Password</label>
                      <input
                        type="password"
                        class="password-login form-control"
                        placeholder="Password"
                      />
                    </div>
                    <button type="submit" class="btn navBtn mx-auto">Sign in</button>
                  </form>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" type="link" href="/login">New
                    around here? Sign up</a>
                </ul>
              </li>

              {{! LOGOUT BUTTON }}

              {{#if loggedIn}}
                <li class="nav-item">
                  <a
                    class="nav-link"
                    id="logout"
                    aria-current="page"
                    href="#"
                  >Logout</a>
                </li>
              {{/if}}

              {{! RIGHT NAV BUTTON }}
              {{! //TODO: MOBILE POSITIONING USING SM BOOTSTRAP CLASS  }}
            </ul>
            <div class="dropdown">
              <button
                class="btn btn-secondary navBtn"
                type="button"
                id="dropdownMenuButton2"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <span class="navbar-toggler-icon mx-5"></span>
              </button>
              <ul
                class="dropdown-menu dropdown-menu-dark"
                aria-labelledby="dropdownMenuButton2"
              >
                <li><a class="dropdown-item" href="/spilltea">Spill the Tea</a></li>
                <li><a class="dropdown-item" href="/drink">View Reviews</a></li>
                <li><a class="dropdown-item" href="/tutorportal">Tutor List</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a
                    class="dropdown-item"
                    href="/collab"
                  >Collabrewators</a></li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

    </header>

    <!-- main jumbotron start -->
    <main>

      {{{body}}}

    </main>

    {{#if toast}}
          {{> toast}}
    {{/if}}
    {{! FOOTER }}
    <div id="footer" class="row position-absolute-bottom bottom-0">
      <footer
        class="py-3 d-flex flex-wrap justify-content-between align-items-center mx-auto my-auto"
      >
        <div
          id="footer-co"
          class="col-12 col-md-4 d-flex justify-content-start align-items-center ps-2"
        >
          <p class="my-1">&copy;  <a href="/coll">Collabrewation</a> </p>
        </div>

        <!-- Footer Icon Links -->
        <ul
          id="footer-logos"
          class="nav col-12 col-md-4 justify-content-end list-unstyled d-flex pe-3"
        >
          <li class="ms-3"><a
              class="text-muted"
              href="https://github.com/lonewolfco/tutortea"
            ><img
                src="/assets/GitHub-Mark-Light-64px.png"
                width="23"
                height="21"
                alt="GitHub Logo"
              /></a></li>
        </ul>

      </footer>
      <div id="scrollTop"> â†‘ </div>
    </div>

    {{! SCROLL TOP BUTTON }}

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}

    <!-- link to bootstrap framework javascript, jQuery, and local javascript file -->
    <script
      src="https://d19m59y37dris4.cloudfront.net/sell/2-0/vendor/bootstrap/js/bootstrap.bundle.min.js"
    ></script>
    <script src="https://code.jquery.com/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="/js/scrollUp.js"></script>
    <script src="/js/main.js"></script>




</body>


</html>